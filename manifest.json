{
    "manifest_version": 3,
    "name": "Plemiona Specific time attack",
    "description": "Automatycznie klikaj przycisk Atakuj w plemiona.pl, kiedy określona godzina zostanie osiągnięta.",
    "version": "1.1",
    "permissions": [
       "storage"
    ],
    "content_scripts": [
        {
          "matches": ["*://*.plemiona.pl/*"],
          "js": ["content.js"]
        }
      ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
  }